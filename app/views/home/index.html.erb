<hr>
<section id="jobs">
  <% @jobs.each do |job| %>
  <% next if job.expired? #If the job is expired jump to the next iteration %>
    <div class="jobs">
      <h3><%= job.title %></h1>
      <p><%= job.location %></p>
      <p><%= job.company.name %></p>
      <p><%= job.category.name %></p>
      <% if job.recent? %>
        <p><em>Novidade</em></p>
      <% end %>
      <%= link_to 'Ver mais', job %>
      <hr>
    </div>
  <% end %>
